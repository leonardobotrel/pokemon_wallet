<div id="layout-wrapper">
  <div class="main-content">
    <div class="page-content">
      <div class="container-fluid">
        <%= render partial: "shared/breadcrumb",
                   locals: { title: 'Lista de Pokemóns', item: "Pokémon" } 
        %>
        <div class="row">
          <div class="col-lg-12">
            <div class="card">
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-striped">
                    <thead>
                      <tr>
                        <th data-column-id="name" class="text-center">
                          Nome
                        </th>
                        <th data-column-id="base_experience" class="text-center">
                          Experiência Base
                        </th>
                        <th data-column-id="actions" class="text-center">
                          Ação
                        </th>
                      </tr>
                      <!-- end tr -->
                    </thead>
                    <!--  end thead -->
                    <tbody>
                      <% @pokemons["results"].each do |pokemon| %>
                        <tr>
                          <td data-column-id="name" class="text-center"><%= pokemon["name"] %></td>
                          <td data-column-id="base_experience" class="text-center"><%= pokemon["base_experience"] %></td>
                          <td>
                            <div class="dropdown text-center">
                              <%= button_to "Comprar", wallet_pokemons_path(name: pokemon["name"], base_experience: pokemon["base_experience"]), class: "btn btn-primary btn-sm" %>
                            </div>
                          </td>
                        </tr>

                      <% end %>

                    </tbody>
                    <!-- end tbody -->
                  </table>
                  <!--  end table -->
                </div>


                <!-- end table responsive -->
                <div class="row g-0 text-center text-sm-start">
                  <div class="col-sm-6">
                    <div>
                      <p class="mb-sm-0">
                        Exibindo item <strong><%= @next_offset-9 rescue @previous_offset + 10 %> - <%= @next_offset %></strong> de um total de <strong><%= @pokemons["count"] %></strong>
                      </p>
                    </div>
                  </div>
                  <!-- end col -->
                  <div class="col-sm-6">
                    <%= render partial: "pokemons/pagination"%>
                  </div>
                  <!-- end col -->
                </div>
                <!-- end row -->
              </div>
              <!-- end card body -->
            </div>
            <!-- end card -->
          </div>
          <!-- end col -->
        </div>

      </div>
    </div>
  </div>
</div>
